# Example environment variables for Vercel deployment
# Copy these to your Vercel project settings

# Database Configuration - REQUIRED
DATABASE_URL="postgres://username:password@host:5432/dbname?sslmode=require"
# Must include 'sslmode=require' for Neon DB

# Environment - REQUIRED
NODE_ENV="production"

# Client URLs for CORS - REQUIRED
# Format: comma-separated list without spaces
CLIENT_URL="https://readyformss.vercel.app,https://your-domain.com"

# JWT Configuration - REQUIRED
JWT_SECRET="your-secret-key-here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-refresh-secret-key-here" 
JWT_REFRESH_EXPIRES_IN="7d"

# Debug Token - Optional but recommended
DEBUG_TOKEN="some-hard-to-guess-string"

# CORS Configuration - Optional
ALLOW_ALL_ORIGINS="false"
